<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include('./partials/head') %>  
</head>
<body>
	<%- include('./partials/headerLogueado')%> 
	
	

	
	

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/galperin.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">Marcos Galperin
						<a href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<body>
		<h1 class= "nuestros-productos" style="text-align: center;">MIS PRODUCTOS</h1>
	  
		<div class="container products-wrapper">
			  <div class="row">
			  <% for (let i=4; i<autos.length; i ++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
					  <section class="product-box">
						<a href="/detail/<%= autos[i].id%>">
							<figure class="product-box_image">
								<img src="/images/productos/<%= autos[i].imagen %> " alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= autos[i].nombreProducto %></h2>
								<p>Precio : $ <%= autos[i].precio %></p>
				  <a href="/detail/<%=autos[i].id %>" class= "btn btn-primary">Ver detalles</a>
							</article>
						</a>
					</section>
				</div>
				<% } %>
			</div>
		 </div>
	  <p class= "nuestros-productos" style="text-align: center;">Fin de catalogo</p>
	  </body>
	


	
	
	<%- include('./partials/footer')  %> 
	
	
	

</body>	
</html>