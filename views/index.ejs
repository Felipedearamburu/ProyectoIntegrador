<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') %>  
  </head>
  <%- include('./partials/header') %>
  <!-- Banner -->
	<div class="banner-auto" >
		<img src="images/baner.png" style= "max-height:min-content;" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->
  <body>
    <h1 class= "nuestros-productos" style="text-align: center;">NUESTROS PRODUCTOS</h1>
  <% if(locals.user){ %>
<h5 class = "bienvenido">Bienvenido: <%= locals.user.nombre %></h5>
<% }%>
	<div class="container products-wrapper">
      	<div class="row">
          <% for (let i=0; i<Producto.length; i ++){ %>
			    <div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/detail/<%= Producto[i].id%>">
						<figure class="product-box_image">
							<img src="/images/productos/<%= Producto[i].imagen %> " alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= Producto[i].nombreProducto %></h2>
							<p>Precio : $ <%= Producto[i].precio %></p>
              <a href="/detail/<%=Producto[i].id %>" class= "btn btn-primary">Ver detalles</a>
						</article>
					</a>
				</section>
			</div>
			<% } %>
    	</div>
 	</div>
  <p class= "nuestros-productos" style="text-align: center;">Fin de cat√°logo</p>
  </body>

  <%- include('./partials/footer') %>
</html>
